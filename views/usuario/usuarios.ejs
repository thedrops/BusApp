<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/header.ejs') %>
<body>
    <%- include('../includes/nav.ejs') %>
    <div class="container mt-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-10 "><h3 class="card-title">Usuarios</h3></div>
                    <div class="col-sm-2"><a class="btn btn-success" href="/usuarios/novo">Novo Usuário</a></div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let usuario of usuarios){ %>
                            <tr>
                                <td><%= usuario.nome %></td>
                                <td><%= usuario.email %></td>
                                <td>
                                    <a class="btn btn-danger btn-sm" href="/usuarios/excluir/<%= usuario.id %>">Deletar</a>
                                    <a class="btn btn-info btn-sm" href="/usuarios/editar/<%= usuario.id %>">Alterar</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
        
        </div>
    </div>
    <%- include('../includes/scripts.ejs') %>
</body>
</html>